<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
			<ul class="nav navbar-nav navbar-left">
				<li><%= link_to "Coral Trait Database", root_path %></li>
				<li class="dropdown">
					<a href="#" id="data" class="dropdown-toggle">
						Data <b class="caret"></b>
					</a>
					<ul id="dropdown-data" class="dropdown-menu">
						<li><%= link_to "Species", species_path %></li>
						<li><%= link_to "Traits", traits_path %></li>
						<li><%= link_to "Resources", resources_path %></li>
						<li><%= link_to "Locations", locations_path %></li>
						<li><%= link_to "Standards", standards_path %></li>
						<li><%= link_to "Methodologies", methodologies_path %></li>
            <% if logged_in? && current_user.admin? %>
							<li class="divider"></li>
              <li><%= link_to "Observations", observations_path %></li>
              <li class="divider"></li>
							<li><%= link_to "Trait Classes", traitclasses_path %></li>
							<li><%= link_to "Value Types", valuetypes_path %></li>
							<li><%= link_to "Precision Types", precisiontypes_path %></li>
						<% end %>
					</ul>
				</li>
				<li>
					 <%= form_tag search_index_path, class: "navbar-form", :method => :get do %>
 							<%= text_field_tag :search, params[:search], { class: "form-control", placeholder: "Search..." }   %>
 					<% end %>
				</li>
			</ul>

			<ul class="nav navbar-nav navbar-right">
				<% if logged_in? %>
				<li class="dropdown">
					<a href="#" id="account" class="dropdown-toggle">
						<%= current_user.first_name %> <%= current_user.last_name %><b class="caret"></b>
					</a>
					<ul id="dropdown-account" class="dropdown-menu">
						<li><%= link_to "Profile", current_user %></li>
						<li><%= link_to "Settings", edit_user_path(current_user) %></li>

						<% if logged_in? && current_user.admin? %>
							<li><%= link_to "Users", users_path %></li>
							<li class="divider"></li>
						<% end %>
						<li><%= link_to "Log out", logout_path, data: { "turbo-method": :delete } %></li>
					</ul>
				</li>
				<% else %>
					<li><%= link_to "Log in", login_path %></li>
				<% end %>
			</ul>

    </nav>
  </div>
</header>
